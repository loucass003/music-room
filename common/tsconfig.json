{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "incremental": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["**/**.ts"]
}
